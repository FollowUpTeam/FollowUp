<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"

    tools:context="com.ipbase.followup.activity.UploadBingliActivity">

    <com.ipbase.followup.widget.TitleBar
        android:id="@+id/tbv_titlebar_upload"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/gray_light"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:text="主要症状"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/default_title_textSize" />
                <EditText
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/et_zhuYaoZhengZhuang"
                    android:gravity="top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_width="match_parent"
                    android:minHeight="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_title_textSize"
                    android:hint="请添加主要症状"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="病症详情"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/default_title_textSize" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="目前诊断"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/default_title_textSize"
                        />
                    <EditText
                        android:id="@+id/et_zhenDuan"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:minHeight="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_title_textSize"
                        android:hint="请添加诊断信息"

                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="发病过程"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/default_title_textSize" />
                    <EditText
                        android:id="@+id/et_faBingGuoCheng"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:minHeight="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_title_textSize"
                        android:hint="请添加发病过程"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jiuZhenXinXi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:text="就诊信息"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/default_title_textSize"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/btn_jiuZhenXinXi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_transparent_btn"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_gogogo"
                     />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
