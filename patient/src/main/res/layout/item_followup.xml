<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="75dp">

        <ImageView
            android:id="@+id/iv_recent_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/followup_record"
            />

        <TextView
            android:id="@+id/tv_followup_name"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="58.0dip"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textSize="16sp"
            android:text="刘医生-6月份随访问卷"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_followup_time"
            style="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_followup_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textSize="13sp"
            android:text="2017-6-19"/>

        <RelativeLayout
            android:id="@+id/rl_followup_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_followup_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/iv_followup_status"
                android:gravity="center"
                android:text="已读"
                android:textColor="@color/purple"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_followup_status"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/hadread"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"
        android:background="#dadada">
    </View>

</RelativeLayout>